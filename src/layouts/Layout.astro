---
import "../styles/global.css";
import "@fontsource-variable/onest";
import { ClientRouter } from "astro:transitions";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Granjas Rodriz Oink y Siempre Contigo</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:title" content="Granjas Rodriz Oink y siempre contigo" />
    <meta
      property="og:description"
      content="Granjas Rodriz, tu fuente confiable para cerdos de calidad"
    />
    <meta
      property="og:image"
      content="https://granjasrodriz.com/images/og-image.webp"
    />
    <meta property="og:url" content="https://granjasrodriz.com" />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="Granjas Rodriz Oink y siempre contigo"
    />
    <meta
      name="twitter:description"
      content="Granjas Rodriz, tu fuente confiable para cerdos de calidad"
    />
    <meta
      name="twitter:image"
      content="https://granjasrodriz.com/images/og-image.webp"
    />
    <meta name="twitter:url" content="https://granjasrodriz.com" />

    <!-- SEO -->
    <meta
      name="description"
      content="Granjas Rodriz, expertos en cerdos de calidad. Compra y venta directa desde granja."
    />
    <meta
      name="google-site-verification"
      content="A8DW22V2hzdHuRkROXzmqdzMrIQ6i6rijYjoei3YCAw"
    />

    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }
</style>
